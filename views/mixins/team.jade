mixin team(title, image, members, wanted_skills)
  .ui.item
    .ui.small.image
      img.team-image(src=image)
    .ui.content
      .ui.stackable.grid
        .twelve.wide.column
          h1= title
          .ui.list
            each member in members
              .item
                a.ui.label.gray(href='/profile')= member.name
                  .detail= member.proffession

        .four.wide.column
          h4 Prijavi se kao:
          .ui.list
            each skill in wanted_skills
              .item.role(data-content="Prijavi se!")
                a.ui.button.stretched.centered.text.blue= skill

