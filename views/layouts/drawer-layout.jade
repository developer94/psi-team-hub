extends layout

block nav
  .ui.thin.sidebar.inverted.vertical.menu
    a.switch.drawer.item(href='/') PSI
    a.switch.drawer.item(href='/students') Kolege
    a.switch.drawer.item(href='/teams') Timovi
    a.switch.drawer.item(href='/profile') Profil
    a.item.team.creation Napravi tim
  .ui.grid
    .four.column.row
      .column
        .ui.grid
          .centered.column.text-align-center
            i.big.sidebar.icon.padded(id='nav-drawer-button')

  #team-creation-modal.ui.basic.modal
    .ui.icon.header
      i.connectdevelop.icon
      | Forma za pravljenje tima
    .content.center.aligned
      .six.wide.stretched.column
        form.ui.form(action='/teams', method='post')
          .field
            .two.fields
              .field
                input(type="text", name="team_name", placeholder="Ime Tima")
              .field
                input(type="text", name="project_name", placeholder="Ime Projekta")
          .field
              input(type="text", name="project_decsription", placeholder="Kratak opis projekta")
          .field.text-align-center.double.size
            h4 Potrebne uloge
            .ui.four.column.grid
              .column
                h4.color.white.checker Frontender
              .column
                h4.color.white.checker Backender
              .column
                h4.color.white.checker Dizajner
              .column
                h4.color.white.checker Tim lider
          .actions
            .ui.two.column.grid
              .column.right.aligned
                .ui.red.deny.button
                  | Nazad
              .column.left.aligned
                a.ui.positive.button.switch.drawer(href='/teams') Prijavi se
